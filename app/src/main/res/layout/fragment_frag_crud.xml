<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161616"
    android:id="@+id/Frag_crud_container"
    tools:context=".Frag_crud">

    <!-- TODO: Update blank fragment layout -->


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Poster Start -->
            <TextView
                android:id="@+id/txt_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginBottom="50dp"
                android:text="Hi admin, have new movie today?"
                android:textColor="#F9FE3C"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/image_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
  /> <!-- Poster -->

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="150dp"
                android:layout_height="220dp"
                android:layout_marginBottom="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/movieffrom"
                app:layout_constraintBottom_toTopOf="@+id/btn_gotoformadd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>


            <Button
                android:id="@+id/btn_gotoformadd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="35dp"
                android:layout_marginBottom="100dp"
                android:background="@drawable/st_inputimg"
                android:fontFamily="@font/poppins_bold"
                android:text="Add new movie"
                android:textColor="#818140"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent" /> <!-- btn pilih gambar -->
            <!-- Poster End -->


        </androidx.constraintlayout.widget.ConstraintLayout>





</FrameLayout>